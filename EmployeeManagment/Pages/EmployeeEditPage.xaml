<Page x:Class="EmployeeManagment.Pages.EmployeeEditPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:EmployeeManagment.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="EmployeeEditPage">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="5*"/>
        </Grid.ColumnDefinitions>

        <StackPanel Grid.Column="1" VerticalAlignment="Center" Width="350">
            <Label Content="Имя"/>
            <TextBox Name="EmployeeName"/>
            <Label Content="Должность"/>
            <TextBox Name="EmployeePosition"/>
            <Button Content="Сохранить"
                    Style="{DynamicResource RoundedButton}"
                    Click="Save"/>
        </StackPanel>
    </Grid>
</Page>
